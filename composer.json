{
    "name": "amaccis/datetai",
    "type": "library",
    "description": "A PHP library that includes a set of tools for handling the TAI time standard with DateTime and DateTimeImmutable instances.",
    "keywords": [
        "tai64",
        "tai64n",
        "tai64na",
        "date",
        "time",
        "datetime",
        "datetimeimmutable"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Andrea Maccis",
            "email": "andrea.maccis@gmail.com"
        }
    ],
    "require": {
		"php": "^8.1",
        "ext-ctype": "*"
    },
    "autoload": {
        "psr-4": {
            "Amaccis\\DateTai\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amaccis\\DateTai\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }
}
